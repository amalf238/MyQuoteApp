<p style="color: green"><%= notice %></p>
<%#  Display the quote categories as headings %>
<% @quote.categories.each do |category| %>
  <h3><%= category.categoryName %></h3>
<% end %>

<%# get the quote details %>
<%= render @quote %>

<div style="padding-top: 10px;">
<%# button to Edit Quote %>
  <%= link_to "Edit this quote", edit_quote_path(@quote), class: 'btn btn-primary' %>
<%# button to go back to the qoutes page %>
  <%= link_to "Back to quotes", quotes_path, class: 'btn btn-secondary' %>
<div style="padding-top: 20px;">
<%# button to Delete Quote %>
  <%= button_to "Delete Quote", @quote, method: :delete, class: 'btn btn-danger' %>
</div>
</div>
