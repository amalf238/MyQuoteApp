<p style="color: green"><%= notice %></p>
<%= render @user %>
<div>
  <%# Button to edit the displayed users details %>
  <%= link_to "Edit this user", edit_user_path(@user), class: 'btn btn-secondary mt-2' %>

  <%# Back button to navigate to the manage users main page %>
  <%= link_to "Back to users", users_path, class: 'btn btn-secondary mt-2'%>

<div style="padding-top: 20px;">
  <%# Button to delete user account %>
  <%= button_to "Delete Account", @user, method: :delete, class: 'btn btn-danger' %>
</div>
</div>

