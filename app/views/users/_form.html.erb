<%# The form is connected to the user model so it can reference the attributes and data it manages %>
<%= form_with(model: user) do |form| %>
<%# This is the standard error display code that will show errors that may occur if there is a problem with the formâ€™s submission %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%# display the first name field, but make it uneditable to the administrator %>
  <div class="form-group" style="padding-bottom: 10px;">
    <%= form.text_field :fname, placeholder: 'First Name', class: 'form-control', readonly: (logged_in? && is_administrator?) %>
  </div>
<%# display the last name field, but make it uneditable to the administrator %>
  <div class="form-group" style="padding-bottom: 10px;">
    <%= form.text_field :lname, placeholder: 'Last Name', class: 'form-control', readonly: (logged_in? && is_administrator?) %>
  </div>
<%# display the email address field, but make it uneditable to the administrator %>
  <div class="form-group" style="padding-bottom: 10px;">
    <%= form.text_field :email, placeholder: 'Email Address', class: 'form-control', readonly: (logged_in? && is_administrator?) %>
  </div>
<%# display the password field, but make it uneditable to the administrator BUT show the administrator that the field is not actually empty and that a password has been set %>
  <div class="form-group" style="padding-bottom: 10px;">
    <%= form.password_field :password, placeholder: user.password_digest.present? ? 'Password set' : 'Choose a strong password', class: 'form-control', readonly: (logged_in? && is_administrator?) %>
  </div>

  <div class="form-group" style="padding-bottom: 10px;">
 <%# Make sure that only an administrator can see/use the Admin Role checkbox %>
  <% if logged_in? && is_administrator? %>
    <%= form.label :isAdmin do %>
      Admin Role
    <%= form.check_box :isAdmin %>
  <% end %>
  <% else %>
  <%# If only a standard user, hide this admin field with its current value/setting %>
    <%= form.hidden_field :isAdmin, value: false %>
  <% end %>
  </div>

  <div class="form-group" style="padding-bottom: 10px;">
  <%# Make sure only an administrator can see/use the status field %>
  <% if logged_in? && is_administrator? %>
  <%# Make the status field a drop-list with the three (3) allowed options and pre-set it to whatever is currently set for that user %>
    <%= form.select :status, ['Active', 'Suspended', 'Banned'], {}, class: 'form-control' %>
  <% elsif logged_in? && !is_administrator? %>
  <%# Otherwise, if only a standard user, hide the status field with its current value/setting %>
    <%= form.hidden_field :status %>
  <% else %>
    <%= form.hidden_field :status, value: "Active" %>
  <% end %>
  </div>

  <div>
  <%# If a user is logged in, then the forms role is Edit, so set button name to Update %>
  <% if logged_in? %>
	  <%= form.submit 'Update', class: 'btn btn-primary' %>
  <% else %>
  <%# Else set it to submit as the form is being used for a sign-up %>
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  <% end %>
  </div>
<% end %>
